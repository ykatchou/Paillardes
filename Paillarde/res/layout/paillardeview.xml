<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"  
	android:layout_width="fill_parent" android:layout_height="wrap_content">
  	
  		<TextView android:id="@+id/ch_titre" android:textColor="@color/white"
  		android:textSize="@dimen/ch_titre"
  		android:layout_width="fill_parent" android:layout_height="wrap_content"/>
  		
  		<TextView android:id="@+id/ch_paroles" android:textColor="@color/white" android:textSize="@dimen/ch_paroles"
  		android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	
		<Button android:id="@+id/btn_retour" android:text="@string/btn_retour"
		android:textColor="@color/black" android:textSize="@dimen/btn_retour"
		android:layout_width="fill_parent" android:layout_height="wrap_content"/>
	</LinearLayout>
</ScrollView>